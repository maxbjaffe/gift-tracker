'use client';

import { useEffect, useState } from 'react';
import { useRouter, useParams } from 'next/navigation';
import { supabase, type Recipient } from '@/lib/supabase/supabase';

export default function RecipientDetailPage() {
  const router = useRouter();
  const params = useParams();
  const id = params.id as string;
  
  const [recipient, setRecipient] = useState<Recipient | null>(null);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState<string | null>(null);

  useEffect(() => {
    fetchRecipient();
  }, [id]);

  const fetchRecipient = async () => {
    try {
      setLoading(true);
      const { data, error: fetchError } = await supabase
        .from('recipients')
        .select('*')
        .eq('id', id)
        .single();

      if (fetchError) throw fetchError;
      setRecipient(data);
    } catch (err) {
      console.error('Error fetching recipient:', err);
      setError(err instanceof Error ? err.message : 'Failed to load recipient');
    } finally {
      setLoading(false);
    }
  };

  const handleDelete = async () => {
    if (!window.confirm(`Are you sure you want to delete ${recipient?.name}? This action cannot be undone.`)) {
      return;
    }

    try {
      const { error: deleteError } = await supabase
        .from('recipients')
        .delete()
        .eq('id', id);

      if (deleteError) throw deleteError;

      console.log('Recipient deleted successfully');
      router.push('/recipients');
    } catch (err) {
      console.error('Error deleting recipient:', err);
      alert('Failed to delete recipient. Please try again.');
    }
  };

  const formatDate = (dateString: string | null) => {
    if (!dateString) return 'Not set';
    const date = new Date(dateString);
    return date.toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' });
  };

  if (loading) {
    return (
      <div className="min-h-screen bg-gradient-to-br from-purple-50 via-white to-pink-50 py-12 px-4">
        <div className="max-w-4xl mx-auto">
          <div className="text-center py-12">
            <div className="inline-block animate-spin rounded-full h-12 w-12 border-b-2 border-purple-600"></div>
            <p className="mt-4 text-gray-600">Loading recipient...</p>
          </div>
        </div>
      </div>
    );
  }

  if (error || !recipient) {
    return (
      <div className="min-h-screen bg-gradient-to-br from-purple-50 via-white to-pink-50 py-12 px-4">
        <div className="max-w-4xl mx-auto">
          <div className="bg-red-50 border border-red-200 rounded-lg p-6">
            <p className="text-red-800 font-medium">Error: {error || 'Recipient not found'}</p>
            <button
              onClick={() => router.push('/recipients')}
              className="mt-4 text-purple-600 hover:text-purple-700 font-medium"
            >
              â† Back to Recipients
            </button>
          </div>
        </div>
      </div>
    );
  }

  return (
    <div className="min-h-screen bg-gradient-to-br from-purple-50 via-white to-pink-50 py-12 px-4">
      <div className="max-w-4xl mx-auto">
        {/* Header */}
        <div className="mb-6">
          <button
            onClick={() => router.push('/recipients')}
            className="text-purple-600 hover:text-purple-700 font-medium mb-4 flex items-center gap-2"
          >
            â† Back to Recipients
          </button>
        </div>

        {/* Main Profile Card */}
        <div className="bg-white rounded-xl shadow-lg p-8 mb-6">
          {/* Name & Relationship */}
          <div className="flex items-start justify-between mb-6">
            <div>
              <h1 className="text-4xl font-bold text-gray-900 mb-2">{recipient.name}</h1>
              <span className="inline-block px-4 py-2 bg-purple-100 text-purple-700 rounded-full text-lg font-medium">
                {recipient.relationship}
              </span>
            </div>
            <div className="flex gap-3">
              <button
                onClick={() => router.push(`/recipients/${id}/edit`)}
                className="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium"
              >
                Edit
              </button>
              <button
                onClick={handleDelete}
                className="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors font-medium"
              >
                Delete
              </button>
            </div>
          </div>

          {/* Basic Info Grid */}
          <div className="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
            {recipient.birthday && (
              <div className="flex items-center gap-3">
                <span className="text-2xl">ğŸ‚</span>
                <div>
                  <p className="text-sm text-gray-500">Birthday</p>
                  <p className="text-gray-900 font-medium">{formatDate(recipient.birthday)}</p>
                </div>
              </div>
            )}
            
            {recipient.age_range && (
              <div className="flex items-center gap-3">
                <span className="text-2xl">ğŸ“…</span>
                <div>
                  <p className="text-sm text-gray-500">Age Range</p>
                  <p className="text-gray-900 font-medium">{recipient.age_range}</p>
                </div>
              </div>
            )}
            
            {recipient.gender && (
              <div className="flex items-center gap-3">
                <span className="text-2xl">ğŸ‘¤</span>
                <div>
                  <p className="text-sm text-gray-500">Gender</p>
                  <p className="text-gray-900 font-medium">{recipient.gender}</p>
                </div>
              </div>
            )}
          </div>

          {/* Interests */}
          {recipient.interests && recipient.interests.length > 0 && (
            <div className="mb-6">
              <h3 className="text-lg font-semibold text-gray-900 mb-3">Interests</h3>
              <div className="flex flex-wrap gap-2">
                {recipient.interests.map((interest, index) => (
                  <span
                    key={index}
                    className="px-3 py-1 bg-pink-50 text-pink-700 rounded-full text-sm font-medium"
                  >
                    {interest}
                  </span>
                ))}
              </div>
            </div>
          )}

          {/* Notes */}
          {recipient.notes && (
            <div>
              <h3 className="text-lg font-semibold text-gray-900 mb-3">Notes</h3>
              <p className="text-gray-700 whitespace-pre-wrap">{recipient.notes}</p>
            </div>
          )}
        </div>

        {/* Gift Inspiration Section */}
        <div className="bg-white rounded-xl shadow-lg p-8">
          <h2 className="text-2xl font-bold text-gray-900 mb-6">ğŸ Gift Inspiration</h2>
          
          {/* Gift Categories */}
          <div className="mb-6 pb-6 border-b border-gray-200">
            <h3 className="text-lg font-semibold text-gray-900 mb-3">Gift Categories They Love</h3>
            {recipient.gift_categories && recipient.gift_categories.length > 0 ? (
              <div className="flex flex-wrap gap-2">
                {recipient.gift_categories.map((category: string, index: number) => (
                  <span key={index} className="px-3 py-1 bg-purple-50 text-purple-700 rounded-lg text-sm">
                    {category}
                  </span>
                ))}
              </div>
            ) : (
              <p className="text-gray-500 italic">No categories added yet</p>
            )}
          </div>

          {/* Favorite Stores */}
          <div className="mb-6 pb-6 border-b border-gray-200">
            <h3 className="text-lg font-semibold text-gray-900 mb-3">ğŸª Favorite Stores</h3>
            {recipient.favorite_stores && recipient.favorite_stores.length > 0 ? (
              <div className="flex flex-wrap gap-2">
                {recipient.favorite_stores.map((store: string, index: number) => (
                  <span key={index} className="px-3 py-1 bg-blue-50 text-blue-700 rounded-lg text-sm">
                    {store}
                  </span>
                ))}
              </div>
            ) : (
              <p className="text-gray-500 italic">No stores added yet</p>
            )}
          </div>

          {/* Favorite Brands */}
          <div className="mb-6 pb-6 border-b border-gray-200">
            <h3 className="text-lg font-semibold text-gray-900 mb-3">â­ Favorite Brands</h3>
            {recipient.favorite_brands && recipient.favorite_brands.length > 0 ? (
              <div className="flex flex-wrap gap-2">
                {recipient.favorite_brands.map((brand: string, index: number) => (
                  <span key={index} className="px-3 py-1 bg-green-50 text-green-700 rounded-lg text-sm">
                    {brand}
                  </span>
                ))}
              </div>
            ) : (
              <p className="text-gray-500 italic">No brands added yet</p>
            )}
          </div>

          {/* Do's */}
          <div className="mb-6 pb-6 border-b border-gray-200">
            <h3 className="text-lg font-semibold text-gray-900 mb-3">âœ… Gift Do's</h3>
            {recipient.gift_dos && recipient.gift_dos.length > 0 ? (
              <ul className="space-y-2">
                {recipient.gift_dos.map((item: string, index: number) => (
                  <li key={index} className="flex items-start gap-2">
                    <span className="text-green-600 mt-1">âœ“</span>
                    <span className="text-gray-700">{item}</span>
                  </li>
                ))}
              </ul>
            ) : (
              <p className="text-gray-500 italic">No preferences added yet</p>
            )}
          </div>

          {/* Don'ts */}
          <div className="mb-6 pb-6 border-b border-gray-200">
            <h3 className="text-lg font-semibold text-gray-900 mb-3">âŒ Gift Don'ts</h3>
            {recipient.gift_donts && recipient.gift_donts.length > 0 ? (
              <ul className="space-y-2">
                {recipient.gift_donts.map((item: string, index: number) => (
                  <li key={index} className="flex items-start gap-2">
                    <span className="text-red-600 mt-1">âœ—</span>
                    <span className="text-gray-700">{item}</span>
                  </li>
                ))}
              </ul>
            ) : (
              <p className="text-gray-500 italic">No restrictions added yet</p>
            )}
          </div>

          {/* Wishlist */}
          <div className="mb-6">
            <h3 className="text-lg font-semibold text-gray-900 mb-3">ğŸ“ Wishlist Items</h3>
            {recipient.wishlist_items && Object.keys(recipient.wishlist_items).length > 0 ? (
              <div className="space-y-3">
                {Object.entries(recipient.wishlist_items).map(([key, value]: [string, any], index: number) => (
                  <div key={index} className="p-3 bg-gray-50 rounded-lg">
                    <p className="font-medium text-gray-900">{value.item || key}</p>
                    {value.note && <p className="text-sm text-gray-600 mt-1">{value.note}</p>}
                  </div>
                ))}
              </div>
            ) : (
              <p className="text-gray-500 italic">No wishlist items yet</p>
            )}
          </div>
        </div>
      </div>
    </div>
  );
}